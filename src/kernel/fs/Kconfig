
menu "File systems"

config MSDOS_PARTITION
	bool "MSDOS Partition"
	default y
	help
	  This enables the ramdisk device, which requires a fixed size that
	  will be reserved

#config MALLOC_FS
#	bool "malloc-backed file system"
#	help
#	  This enables the malloc-backed file system.  This allocates RAM from
#	  the user program space as files are created and written to

config MINIX_FS
	bool "Minix file system"
	default y
	help
	  This enables the minix file system support.  Only v1 is supported

endmenu

