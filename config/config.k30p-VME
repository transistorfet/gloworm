#CONFIG_COMPUTIE_68K=y
#CONFIG_COMPUTIE_K30=y
#CONFIG_COMPUTIE_K30_VME=y
#CONFIG_COMET_68K=y


#
# TTY Options
#
CONFIG_TTY=y
CONFIG_TTY_68681=y

#
# Block Device Options
#
CONFIG_ATA=y
CONFIG_MEM=y
# TODO these are the names LINUX uses to add and configure the size of the ram disk which in gloworm is mem, and the /dev/mem0 device
CONFIG_BLK_DEV_RAM=m
CONFIG_BLK_DEV_RAM_COUNT=16
CONFIG_BLK_DEV_RAM_SIZE=16384

#
# File System Options
#
CONFIG_MSDOS_PARTITION=y
#CONFIG_MALLOC_FS=y
CONFIG_MINIX_FS=y

#
# Network Options
#
CONFIG_NET=y
CONFIG_SLIP=y
CONFIG_PACKET=y
#CONFIG_INET is what linux uses for IPv4/TCPv4 (and I guess UDP? didn't see mention of it, but it seems to be bundled)
#I could instead have CONFIG_TCPV4, CONFIG_UDPV4, CONFIG_IPV4
CONFIG_INETV4=y

CONFIG_SHELL_IN_KERNEL=y
CONFIG_SHELL_WITH_UTILS=y
