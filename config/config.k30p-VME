CONFIG_M68K=y
CONFIG_CPU_BIG_ENDIAN=y
#CONFIG_M68000=y
#CONFIG_M68010=y
CONFIG_M68030=y
#CONFIG_MMU=n
#CONFIG_FPU=y
#CONFIG_CACHE=y
